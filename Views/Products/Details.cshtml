@model ProductManagement.Web.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-info text-white text-center rounded-top-4">
            <h3 class="mb-0">
                <i class="bi bi-info-circle-fill"></i> Chi tiết sản phẩm
            </h3>
        </div>

        <div class="card-body px-5 py-4">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold text-secondary">Tên sản phẩm</dt>
                <dd class="col-sm-8 fs-5">@Model.Name</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Giá</dt>
                <dd class="col-sm-8 fs-5 text-success">@Model.Price.ToString("N0") ₫</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Số lượng tồn</dt>
                <dd class="col-sm-8 fs-5">@Model.Stock</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Mô tả</dt>
                <dd class="col-sm-8 fs-6">@Model.Description</dd>
            </dl>

            <div class="text-center mt-5">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg px-4 me-3 shadow-sm text-white">
                    <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-4 shadow-sm">
                    <i class="bi bi-arrow-left-circle me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
