@model ProductManagement.Web.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container py-4">
    <h2 class="text-info fw-bold mb-4">
        <i class="fas fa-info-circle me-2"></i>Chi tiết sản phẩm
    </h2>

    <div class="card shadow-sm border-0 p-4 rounded-3">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Tên sản phẩm</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-bold">Giá</dt>
            <dd class="col-sm-9">@Model.Price.ToString("N0")</dd>

            <dt class="col-sm-3 fw-bold">Số lượng</dt>
            <dd class="col-sm-9">@Model.Stock</dd>

            <dt class="col-sm-3 fw-bold">Mô tả</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>

        <div class="mt-4 text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                <i class="fas fa-edit"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
