@model IEnumerable<ProductManagement.Web.Models.Product>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-box-seam me-2"></i>Quản lý Sản phẩm
        </h2>
        <a asp-action="Create" class="btn btn-success btn-lg px-4 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Thêm sản phẩm
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-primary text-white text-center">
                    <tr>
                        <th class="py-3">Tên sản phẩm</th>
                        <th>Giá (₫)</th>
                        <th>Số lượng</th>
                        <th style="width: 35%;">Mô tả</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="py-4 text-muted">
                                <i class="bi bi-inbox fs-4"></i><br />
                                Chưa có sản phẩm nào.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Name</td>
                                <td class="text-success">@item.Price.ToString("N0")</td>
                                <td>@item.Stock</td>
                                <td class="text-start">@item.Description</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
}
