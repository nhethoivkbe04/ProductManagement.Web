@model ProductManagement.Web.DTOs.ProductCreateDto


@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="container py-4">
    <h2 class="text-success fw-bold mb-4">
        <i class="fas fa-plus-circle me-2"></i>Thêm sản phẩm mới
    </h2>

    <div class="card shadow-sm border-0 p-4 rounded-3">
        <form asp-action="Create">
            <div class="mb-3">
                <label class="form-label fw-bold">Tên sản phẩm</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Giá</label>
                <input asp-for="Price" class="form-control" placeholder="Nhập giá sản phẩm..." />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Số lượng</label>
                <input asp-for="Stock" class="form-control" placeholder="Nhập số lượng tồn kho..." />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả..."></textarea>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-save me-2"></i>Lưu sản phẩm
                </button>
            </div>
        </form>
    </div>
</div>
