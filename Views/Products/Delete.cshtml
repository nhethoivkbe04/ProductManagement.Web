@model ProductManagement.Web.DTOs.ProductDeleteDto


@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container py-4">
    <h2 class="text-danger fw-bold mb-4">
        <i class="fas fa-trash-alt me-2"></i>Xóa sản phẩm
    </h2>

    <div class="card shadow-sm border-0 p-4 rounded-3">
        <p class="fs-5">Bạn có chắc chắn muốn xóa sản phẩm <strong class="text-danger">@Model.Name</strong> không?</p>

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Giá</dt>
            <dd class="col-sm-9">@Model.Price.ToString("N0")</dd>

            <dt class="col-sm-3 fw-bold">Số lượng</dt>
            <dd class="col-sm-9">@Model.Stock</dd>

            <dt class="col-sm-3 fw-bold">Mô tả</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>

        <form asp-action="DeleteConfirmed" class="mt-4 text-end">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Hủy
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt me-1"></i> Xóa
            </button>
        </form>
    </div>
</div>
