@model ProductManagement.Web.DTOs.ProductUpdateDto

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h3 class="mb-0">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa sản phẩm
            </h3>
        </div>

        <div class="card-body px-5 py-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold">Tên sản phẩm</label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Nhập tên sản phẩm..." />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-semibold">Giá</label>
                        <input asp-for="Price" class="form-control form-control-lg" placeholder="Nhập giá sản phẩm..." />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Stock" class="form-label fw-semibold">Số lượng tồn kho</label>
                        <input asp-for="Stock" class="form-control form-control-lg" placeholder="Nhập số lượng..." />
                        <span asp-validation-for="Stock" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                        <textarea asp-for="Description" class="form-control form-control-lg" rows="4" placeholder="Nhập mô tả chi tiết sản phẩm..."></textarea>
                    </div>
                </div>

                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-primary btn-lg px-5 me-3 shadow-sm">
                        <i class="bi bi-save-fill me-2"></i>Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg px-5 shadow-sm">
                        <i class="bi bi-arrow-left-circle me-2"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
